@model LuxyryWatch.Models.ChuongTrinhKhuyenMai

@{
    ViewBag.Title = "XoaChuongTrinhKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div style="padding: 20px;">
        <h2>Xác nhận xóa chương trình khuyến mãi: @Model.TenCTKM </h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                @Html.LabelFor(model => model.TenCTKM, "Tên chương trình khuyến mãi", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.TenCTKM, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.NgayBatDau, "Ngày bắt đầu", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.NgayBatDau, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.NGgayKetThuc, "Ngày hết hạn", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.NGgayKetThuc, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>

            @Html.HiddenFor(model => model.MaCTKM)

            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                    <a href="@Url.Action("DanhSachChuongTrinhKhuyenMai")" class="btn btn-secondary ml-2">Hủy bỏ</a>
                </div>
            </div>
        }
    </div>
</div>