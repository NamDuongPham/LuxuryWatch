﻿@model LuxyryWatch.Models.LoaiSanPham
@{
    ViewBag.Title = "SuaLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<div class="card shadow mb-4">
    <div style="padding: 10px;">
        <h2>Cập nhật thông tin loại sản phẩn : @Model.TenLoaiSP </h2>
        <hr />
        <h3 style="color: red;">@ViewBag.ThongBao</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaLoaiSP)

                <div class="form-group">
                    @Html.LabelFor(model => model.TenLoaiSP, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Quay lại", "DanhSachLoaiSanPham")
        </div>
    </div>
</div>

