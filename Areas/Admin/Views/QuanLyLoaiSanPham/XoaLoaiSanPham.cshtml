@model LuxyryWatch.Models.LoaiSanPham
@{
    ViewBag.Title = "XoaLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<div class="card shadow mb-4">
    <div style="padding: 20px;">
        <h2>Xác nhận xóa loại sản phẩm: @Model.TenLoaiSP </h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                @Html.LabelFor(model => model.TenLoaiSP, "Tên loại sản phẩm", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.MaLoaiSP, "Mã loại sản phẩm", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.MaLoaiSP, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>
            @Html.HiddenFor(model => model.MaLoaiSP)

            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                    <a href="@Url.Action("DanhSachLoaiSanPham")" class="btn btn-secondary ml-2">Hủy bỏ</a>
                </div>
            </div>
        }
    </div>
</div>

