@model LuxyryWatch.Models.NhaSanXuat

@{
    ViewBag.Title = "XoaNhaSanXuat";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div style="padding: 10px;">
        <h2>Xác nhận xóa nhà sản xuất: @Model.TenNSX </h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.TenNSX, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.TenNSX, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                @Html.HiddenFor(model => model.MaNSX)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Hủy bỏ", "DanhSachNhaSanXuat")
        </div>
    </div>
</div>
