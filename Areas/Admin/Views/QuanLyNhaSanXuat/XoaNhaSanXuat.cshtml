@model LuxyryWatch.Models.NhaSanXuat

@{
    ViewBag.Title = "XoaNhaSanXuat";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div style="padding: 20px;">
        <h2>Xác nhận xóa nhà sản xuất: @Model.TenNSX </h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                @Html.LabelFor(model => model.TenNSX, "Tên nhà sản xuất", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.TenNSX, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>

            @Html.HiddenFor(model => model.MaNSX)

            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                    <a href="@Url.Action("DanhSachNhaSanXuat")" class="btn btn-secondary ml-2">Hủy bỏ</a>
                </div>
            </div>
        }
    </div>
</div>
