@using LuxyryWatch.Models;
@model IEnumerable<ChiTietPhieuNhap>
@{
    ViewBag.Title = "ChiTietPhieuNhap";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết phiếu nhập: @ViewBag.MaPN</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã chi tiết phiếu nhập</th>
                        <th>Mã phiếu nhập</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng Nhập</th>
                        <th>Đơn giá nhập</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaCTPN">
                            <td>@item.MaCTPN</td>
                            <td>@item.MaPN</td>
                            <td>@item.SanPham.TenSP</td>
                            <td>@item.SoLuongNhap</td>

                        
                            <td>@item.DonGiaNhap</td>
                            @{
                                decimal thanhTien = (decimal)(item.SoLuongNhap * item.DonGiaNhap);
                            }
                            <td>@thanhTien.ToString("#,##") </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            @Html.ActionLink("Quay lại", "DanhSachPhieuNhap")
        </div>
    </div>

</div>

