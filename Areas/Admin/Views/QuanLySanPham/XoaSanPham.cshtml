@model LuxyryWatch.Models.SanPham
@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<div class="card shadow mb-4">
    <div style="padding: 20px;">
        <h2>Xác nhận xóa sản phẩm: @Model.TenSP </h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.MaSP, "Mã sản phẩm", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.MaSP, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.ThongSo, "Thông số", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.ThongSo, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                </div>
            </div>
            


            @Html.HiddenFor(model => model.MaSP)

            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                    <a href="@Url.Action("DanhSachSanPham")" class="btn btn-secondary ml-2">Hủy bỏ</a>
                </div>
            </div>
        }
    </div>
</div>

