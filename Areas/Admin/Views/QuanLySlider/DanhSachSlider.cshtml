@using PagedList.Mvc
@using LuxyryWatch.Models
@model PagedList.IPagedList<Slider>
@{
    ViewBag.Title = "DanhSachSlider";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Quản lý slider</h6>
    </div>
    <div class="col-md-4">
        <br />
        <a href="@Url.Action("CapNhatSlider", "QuanLySlider")" type="submit" class="btn btn-success">Cập nhật</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã slider</th>
                        <th>Ảnh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaSlider">
                            <td>@item.MaSlider</td>
                            <td>
                                @if (item.Anh != null)
                                {
                                    <img src="@Url.Content("~"+item.Anh)" style="width: 150px;" />
                                }
                                else
                                {
                                    <img src="x" style="width: 150px;" />
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div>
            @Html.PagedListPager(Model, Page => Url.Action("DanhSachSlider", new
       {
           page = Page
       }), new PagedListRenderOptions
       {
           LiElementClasses = new string[] { "item" },

       })
        </div>
    </div>

</div>
<style>
    .item {
        height: 30px;
        width: 30px;
        padding-top: 2px;
        border: 0.5px solid pink;
        text-align: center;
        border-radius: 3px;
    }

        .item a {
            color: black;
            text-decoration: none;
        }

    .pagination .active {
        background-color: #337AB7;
        color: white;
    }

    .item:hover {
        background-color: #EEEEEE;
    }
</style>