@model LuxyryWatch.Models.ThongTin

@{
    ViewBag.Title = "GioiThieu";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/ckeditor/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('GioiThieu');
    });
</script>
<div class="card shadow mb-4">
    <div style="padding: 10px;">
        <h2>Giới Thiệu</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @if (Model != null)
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaTT)
                }

                <div class="form-group">
                    @Html.LabelFor(model => model.GioiThieu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea id="GioiThieu" name="Giới thiệu">@Model.GioiThieu</textarea>
                        @Html.ValidationMessageFor(model => model.GioiThieu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
