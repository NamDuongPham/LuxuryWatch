                            <form action="payment.html" method="post" class="creditly-card-form agileinfo_form">
                                <div class="creditly-wrapper wthree, w3_agileits_wrapper">
                                    <div class="information-wrapper">
                                        <div class="first-row">
                                            <div class="controls form-group">
                                                <input class="billing-address-name form-control" type="text" name="HoTen" placeholder="Họ Tên" required="" value="@ViewBag.Hoten">
                                            </div>
                                            <div class="w3_agileits_card_number_grids">
                                                <div class="w3_agileits_card_number_grid_left form-group">
                                                    <div class="controls">
                                                        <input type="text" class="form-control" placeholder="Số điện thoại" name="SDT" required="" value="@ViewBag.SDT">
                                                    </div>
                                                </div>
                                                <div class="w3_agileits_card_number_grid_left form-group">
                                                    <div class="controls">
                                                        <input type="text" class="form-control" placeholder="Email" name="Email" required="" value="@ViewBag.Email">
                                                    </div>
                                                </div>
                                                <div class="w3_agileits_card_number_grid_right form-group">
                                                    <div class="controls">
                                                        <input type="text" class="form-control" placeholder="Địa chỉ nhận hàng" name="DiaChi" required="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="controls form-group">
                                                <input type="text" class="form-control" placeholder="Ghi chú" name="GhiChu" required="">
                                            </div>
                                        </div>
                                        <button type="submit" class="submit check_out btn">Đặt hàng</button>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="controls form-group">
                    <input type="text" class="form-control" placeholder="Ghi chú" name="GhiChu" required="">
                </div>
                <button id="btnDatHang" class="submit check_out btn">Đặt hàng</button>
            }
        </div>
    </div>
}
    </div>

<script>
        // Hàm tính toán tổng thành tiền của giỏ hàng
        function calculateTotal() {
            var total = 0;
            $(".total-price").each(function () {
                var price = parseFloat($(this).text().replace(',', '').replace('$', ''));
                total += price;
            });
            $("#total-order").text(total.toLocaleString('en-US', { style: 'currency', currency: 'USD' }));
        }

        $(document).ready(function () {
            $(".increase-quantity").click(function () {
                var itemId = $(this).data('id');
                var quantityInput = $(this).siblings('.quantity-input');
                var currentQuantity = parseInt(quantityInput.val());
                quantityInput.val(currentQuantity + 1);
                updateQuantity(itemId, currentQuantity + 1);
                window.location.reload(); // Reload trang sau khi tăng số lượng
            });

            $(".decrease-quantity").click(function () {
                var itemId = $(this).data('id');
                var quantityInput = $(this).siblings('.quantity-input');
                var currentQuantity = parseInt(quantityInput.val());
                if (currentQuantity > 1) {
                    quantityInput.val(currentQuantity - 1);
                    updateQuantity(itemId, currentQuantity - 1);
                    window.location.reload(); // Reload trang sau khi tăng số lượng
                }
            });

            function updateQuantity(itemId, newQuantity) {
                // Gửi yêu cầu cập nhật số lượng lên máy chủ
                $.ajax({
                    type: "POST",
                    url: "/GioHang/CapNhatSoLuong",
                    data: { MaSP: itemId, SoLuong: newQuantity },
                    success: function (response) {
                        if (response.success) {
                            updatePrice(itemId, newQuantity);
                            calculateTotal(); // Cập nhật tổng thành tiền sau khi cập nhật số lượng
                        } else {
                            console.log("Cập nhật số lượng thất bại");
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log("Lỗi: " + error);
                    }
                });
            }

            function updatePrice(itemId, newQuantity) {
                var itemRow = $(".rem" + itemId);
                var pricePerItem = parseFloat(itemRow.find(".price-per-item").text().replace(',', '').replace('$', ''));
                var newPrice = pricePerItem * newQuantity;
                itemRow.find(".total-price").text(newPrice.toLocaleString('en-US', { style: 'currency', currency: 'USD' }));
            }
        });

