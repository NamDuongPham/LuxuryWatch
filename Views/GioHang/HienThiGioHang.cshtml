                                    <td class="invert-image">
                                        @if (item.HinhAnh != null)
                                        {
                                            <a href="single.html">
                                                <img src="@Url.Content("~" + item.HinhAnh)" alt=" " class="img-responsive" style="height: 100px; width: 100px;">
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="single.html">
