                                                    <div class="info-product-price my-2">
                                                        <span class="item_price">@item.DonGia.Value.ToString("#,##")</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    SanPhamKhuyenMai SPKM = LSPKM.SingleOrDefault(x => x.MaSP == item.MaSP);
                                                    if (SPKM != null)
                                                    {
                                                        SanPham SP = LSP.SingleOrDefault(x => x.MaSP == item.MaSP);
